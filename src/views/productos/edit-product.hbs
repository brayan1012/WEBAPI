<div class="col-md-4 mx-auto">
    {{#if user}}
    <div class="card">
        <div class="card-header">
            <h3>Editar Producto</h3>
        </div>
        <div class= "card-body">
            <form action="/api/products/{{productox._id}}?_method=PUT" method="POST">
                <input type="hidden" name="_method" value="PUT">
                <div class="form-group">
                    <input type = "text" name="name" class="form-control" placeholder="nombre"
                    value ="{{productox.name}}"> 
                </div>
                <div class="form-group">
                    <input type="text" name="category" class="form-control" placeholder="Categoria"
                    value="{{productox.category}}">
                </div>
                <div class="form-group">
                    <input type="number" name="price" class="form-control" placeholder="Precio"
                    value="{{productox.price}}">
                </div>
                <div class="form-group">
                    <input type="text" name="imgURL" class="form-control" placeholder="URLImagen"
                    value="{{productox.imgURL}}">
                </div>
                <div class="form-group">
                    <button class ="btn btn-primary btn-clock" type="submit">Guardar</button>
                </div>
            </form>
        </div>
    </div>
    {{else}}
    <meta http-equiv="refresh" content="0;URL=/sesionoff">
    {{/if}}
</div>